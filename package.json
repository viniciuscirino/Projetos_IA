
{
  "name": "sindicato-gestao-desktop",
  "productName": "Sindicato Gestao",
  "version": "8.0.0",
  "description": "Sistema de Gestao Desktop para o Sindicato Rural de Indiaroba",
  "author": "Sindicato Rural de Indiaroba",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "electron": "31.0.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "sqlite3": "^5.1.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "SindicatoGestao",
            "authors": "Sindicato Rural de Indiaroba",
            "description": "Sistema de Gestao Desktop para o Sindicato Rural de Indiaroba"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}